<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/add_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_margin="15dip" >
        <!-- 收货人名称 -->
        <TextView
                android:id="@+id/user_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="收货人名称:"/>
        <EditText
                android:id="@+id/user_name_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入收货人名称"
                android:layout_below="@id/user_name_input"
                android:singleLine="true"
                android:inputType="text"/>
        <!-- 收货人手机号码 -->
        <TextView
                android:id="@+id/user_phone_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_edit"
                android:layout_marginTop="3dp"
                android:text="收货人手机号码:"/>
        <EditText
                android:id="@+id/user_phone_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_phone_input"
                android:hint="请输入收货人电话"
                android:singleLine="true"
                android:inputType="text"/>

        <!-- 收货人地址 -->
        <TextView
                android:id="@+id/user_address_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_phone_edit"
                android:layout_marginTop="3dp"
                android:text="收货人地址:"/>
        <EditText
                android:id="@+id/user_address_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_address_input"
                android:hint="请输入收货地址"
                android:singleLine="true"
                android:inputType="text"/>

        <!-- 添加button -->
        <Button android:src="@drawable/login"
                android:id="@+id/add_address_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_address_edit"
                android:text="添加"
                android:layout_alignRight="@id/user_address_edit"/>
    </RelativeLayout>
</LinearLayout>